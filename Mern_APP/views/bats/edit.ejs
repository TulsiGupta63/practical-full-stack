<%- include('../partials/header') %>
<style>
    body {
  background-color: #f0f2f5;
  font-family: 'Roboto', sans-serif;
}

.container {
  max-width: 500px;
  margin-top: 70px;
  padding: 35px 30px;
  background: #ffffff;
  border-radius: 12px;
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
}

h1 {
  text-align: center;
  margin-bottom: 25px;
  font-size: 28px;
  color: #222;
}

form input.form-control,
form textarea.form-control {
  font-size: 16px;
  height: 45px;
  margin-bottom: 15px;
  padding: 10px 12px;
  border: 1px solid #ccc;
  border-radius: 8px;
  transition: border 0.3s ease, box-shadow 0.3s ease;
}

form textarea.form-control {
  height: 100px;
  resize: none;
}

form input[readonly] {
  background-color: #e9ecef;
  cursor: not-allowed;
}

form input.form-control:focus,
form textarea.form-control:focus {
  border-color: #007bff;
  box-shadow: 0 0 5px rgba(0, 123, 255, 0.4);
  outline: none;
}

form button {
  width: 100%;
  height: 48px;
  font-size: 17px;
  margin-top: 10px;
  font-weight: 500;
  border-radius: 8px;
  transition: background 0.3s ease;
}

form button:hover {
  background-color: #0056b3;
}

</style>
<div class="container mt-4">
  <h1>Edit Bat</h1>
  <form action="/bats/<%= bat._id %>" method="POST" class="needs-validation" novalidate>
    <input type="text" value="<%= bat.brandName %>" class="form-control mb-2" readonly>
    <input type="number" name="bat[price]" value="<%= bat.price %>" required class="form-control mb-2">
    <input type="text" name="bat[image]" value="<%= bat.image %>" required class="form-control mb-2">
    <textarea name="bat[desc]" required class="form-control mb-2"><%= bat.desc %></textarea>
    <input type="text" name="bat[brandAmbassador]" value="<%= bat.brandAmbassador %>" required class="form-control mb-2">
    <button class="btn btn-primary">Update Bat</button>
  </form>
</div>

<%- include('../partials/footer') %>
